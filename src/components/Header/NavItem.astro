---
const { href } = Astro.props
const isActive = Astro.url.pathname === href
---

<li>
  <a
    href={href}
    class:list={[
      'relative block px-3 py-2 transition',
      isActive
        ? 'text-aquamarine-500 dark:text-aquamarine-400'
        : 'hover:text-aquamarine-500 dark:hover:text-aquamarine-400',
    ]}
  >
    <slot />
    {
      isActive && (
        <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-aquamarine-500/0 via-aquamarine-500/40 to-aquamarine-500/0 dark:from-aquamarine-400/0 dark:via-aquamarine-400/40 dark:to-aquamarine-400/0" />
      )
    }
  </a>
</li>
